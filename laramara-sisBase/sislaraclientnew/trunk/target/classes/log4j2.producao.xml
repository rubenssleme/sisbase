<Configuration status="INFO">
	<properties>
		<property name="nomeArquivo">logs/sislaraclient.log</property>
		<property name="pattern">%d %-5p [%c{1}] %m%n</property>
		<property name="charset">UTF-8</property>
	</properties>
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="${pattern}" charset="${charset}"/>
		</Console>
		<RollingFile name="Arquivo" fileName="${nomeArquivo}"
			append="true" filePattern="${nomeArquivo}.%d{yyyy-MM}">
			<PatternLayout pattern="${pattern}" charset="${charset}"/>
			<Policies>
				<TimeBasedTriggeringPolicy/>
			</Policies>
		</RollingFile>
	</Appenders>
	<Loggers>
		<Root level="INFO">
			<AppenderRef ref="Console" />
			<AppenderRef ref="Arquivo" />
		</Root>
	</Loggers>
</Configuration>